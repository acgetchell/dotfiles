#!/bin/bash

#Run in home directory
sudo -v

brew update
brew upgrade
brew tap homebrew/versions
brew tap phinze/homebrew-cask
brew install brew-cask

# Lisp-y devel
brew install emacs
brew install sbcl
brew install clojure
brew install leiningen
brew cask install light-table

# General devel
brew cask install sublime-text
brew install ruby
brew install legit
legit install
brew cask install github

# C++ devel
brew install open-mpi
brew install boost --with-c++11
brew install doxygen --with-dot --with-doxywizard --with-libclang
# GraphViz generates nice diagrams for doxygen
brew install graphviz --with-app
brew install cmake
brew install cpputest
# Manual install of gmock and gtest
brew install rlog
brew install scons
# Manual install of JsonCpp
# Travis-CI checker
gem install travis-lint
# Travis command line client
sudo gem install travis -v 1.6.6 --no-rdoc --no-ri

# Python devel
# sudo easy_install pip
# sudo pip install pylint

# devel boxen
brew cask install virtualbox
brew cask install vagrant

# Research
brew install eigen
brew install cgal --imaging --with-eigen3 --with-lapack
brew cask install zotero
brew cask install anki
brew install dieharder
brew install inkscape
# Geomview generates 2D and 3D diagrams for CGAL
# but it needs xquartz first
brew cask install xquartz
# To run X11/Xquartz apps locally from remote clients
# Create ~/.ssh/config and add in:
# ForwardX11 yes
# ForwardX11Trusted yes
brew install geomview

# Sysadmin
brew install ssh-copy-id
brew cask install menu-meters


# Terminal utilities
brew install irssi
brew install netcat
# Must have git first
# Install homesick
gem install homesick
homesick clone https://github.com/acgetchell/dotfiles.git

# Install bash_it
git clone http://github.com/revans/bash-it.git ~/.bash_it
~/.bash_it/install.sh
# Pull .bash_profile from github dotfiles, overwriting the one bash_it just made
homesick pull dotfiles
homesick symlink dotfiles -f

# Applications

brew cask install alfred
brew cask alfred link
brew cask install clean-my-mac
brew cask install dropbox
brew cask install google-chrome
brew cask install macfusion
brew cask install tor-browser
brew cask install true-crypt
brew cask install skype
brew cask install firefox

# Octopress
brew install pow
# Follow http://paulsturgess.co.uk/blog/2013/04/24/hello-octopress-and-github-pages/

# Fun
brew cask install steam

# Link installed apps to ~/Applications
brew linkapps

# Cleanup
brew cleanup
